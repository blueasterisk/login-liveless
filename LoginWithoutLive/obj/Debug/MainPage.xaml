<Page
    x:Class="LoginWithoutLive.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LoginWithoutLive"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <CollectionViewSource x:Name="cvs1"
                              IsSourceGrouped="true" />
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button x:ConnectionId='1' x:Name="SignInButton"
                    Content="Sign in"
                                              
                    IsEnabled="{Binding NeedsToGetTicket}" />
            <TextBox x:Name="DebugArea"
                     Height="100"
                     TextWrapping="Wrap"
                     IsReadOnly="True"
                     Text="" />
            <Image x:Name="UserPicture"
                   Width="64"
                   Height="64"
                   Source="Assets/user.png"
                   HorizontalAlignment="Left"
                   Grid.Column="0" />
            <TextBlock x:Name="UserName"
                       TextWrapping="NoWrap"
                       Text=""
                       Padding="5"
                       Grid.Column="1" />

            <GridView x:Name="ContactsByLetter"
                      VerticalAlignment="Bottom"
                      Width="800"
                      ItemsSource="{Binding Source={StaticResource cvs1}}"
                      BorderBrush="Gray"
                      BorderThickness="0">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal"
                                        Margin="10,10,0,0">
                                <Image Source="{Binding Image}"
                                       Height="60"
                                       Width="60"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0" />
                                <StackPanel Margin="0,0,0,0"
                                            Orientation="Vertical">
                                    <TextBlock TextWrapping="Wrap"
                                               Style="{StaticResource BasicTextStyle}"
                                               Width="200"
                                               VerticalAlignment="Center"
                                               Text="{Binding Name}"
                                               HorizontalAlignment="Left"
                                               FontFamily="Segoe UI" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Grid Margin="10">
                                    <TextBlock Text="{Binding Key}"
                                               Foreground="Gray"
                                               FontSize="25"
                                               Margin="5" />
                                </Grid>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                        <GroupStyle.Panel>
                            <ItemsPanelTemplate>
                                <VariableSizedWrapGrid Orientation="Vertical"
                                                       Height="400" />
                            </ItemsPanelTemplate>
                        </GroupStyle.Panel>
                    </GroupStyle>
                </GridView.GroupStyle>
            </GridView>
        </StackPanel>
    </Grid>
</Page>

